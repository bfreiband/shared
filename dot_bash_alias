if [[ -n "$LS_COLORS"  ]]; then
  alias ls='ls --color=auto --group-directories-first'

  alias grep='grep --color=auto'
  alias fgrep='fgrep --color=auto'
  alias egrep='egrep --color=auto'
  
  hash viman 2> /dev/null && alias man='viman'

fi

alias rgp='rg -g '!/public''
alias wstart='watchexec -r -w . -w ../corelib -- npm start'
alias wtest='watchexec -r -w . -w ../corelib -- NODE_ENV=test npm start'
function npm-do { (PATH=$(npm bin):$PATH; eval $@;) }
function ccrun { (npm-do codeceptjs run $@ --steps;) }
